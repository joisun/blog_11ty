:root {
  --fg: #555;
  --fg-deep: #222;
  --fg-deeper: #000;
  --un-default-border-color: #e5e7eb;
}

::selection {
  background: #8884;
}

*,
:before,
:after {
  box-sizing: border-box;
  border-width: 0;
  border-style: solid;
  border-color: var(--un-default-border-color);
}

html,
:host {
  line-height: 1.5;
  -webkit-text-size-adjust: 100%;
  -moz-tab-size: 4;
  tab-size: 4;
  font-family: ui-sans-serif, system-ui, sans-serif, "Apple Color Emoji",
    "Segoe UI Emoji", Segoe UI Symbol, "Noto Color Emoji";
  font-feature-settings: normal;
  font-variation-settings: normal;
  -webkit-tap-highlight-color: transparent;
}

iframe {
  width: 100%;
}

.cd-back {
  margin: 1em 0;
  display: inline-block;
}

.prose {
  color: var(--fg);
  font-size: 1rem;
  line-height: 1.75;
  margin-bottom: 4em;

  & u {
    text-underline-offset: 6px;
  }

  & hr {
    height: 0;
    color: inherit;
    border-top-width: 1px;
    border-color: #7d7d7d4d;
    margin: 3em auto;
    width: 50px;
  }

  & abbr[title] {
    text-decoration: underline dotted;
  }

  & a {
    color: var(--fg-deeper);
    text-decoration: none;
    font-weight: 500;
    border-bottom: 1px solid rgba(125, 125, 125, 0.3);
    transition: border 0.3s ease-in-out;

    &:hover {
      border-bottom: 1px solid var(--fg);
    }

    &::after {
      content: 'ðŸ¡¥';
      width: 1em;
      height: 1em;
      margin-left: .2em;
      display: inline-flex;
    }

    & code {
      color: inherit;
    }
  }

  & strong, & b {
    color: var(--fg-deep);
    font-weight: 600;
  }

  & code, & kbd, & samp, & pre {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
      Liberation Mono, Courier New, monospace;
    font-feature-settings: normal;
    font-variation-settings: normal;
    font-size: 0.875em;
  }

  & sub {
    bottom: -0.25em;
  }

  & sup {
    top: -0.5em;
  }

  & blockquote, & dl, & dd, & h1, & h2, & h3, & h4, & h5, & h6, & hr, & figure, & p, & pre {
    margin: 0;
  }

  & fieldset {
    margin: 0;
    padding: 0;
  }

  & legend {
    padding: 0;
  }

  & ol, & ul, & menu {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  & dialog {
    padding: 0;
  }

  & textarea {
    resize: vertical;
  }

  & button, & [role="button"] {
    cursor: pointer;
  }

  & :disabled {
    cursor: default;
  }

  & [class~="lead"] {
    color: #4b5563;
    font-size: 1.25em;
    line-height: 1.6;
    margin-top: 1.2em;
    margin-bottom: 1.2em;
  }

  & ol, & ul {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    list-style-type: none;
  }

  & li {
    position: relative;
    padding-left: 1.75em;
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }

  & ol > li::before {
    content: counter(list-item, var(--list-counter-style, decimal)) ".";
    position: absolute;
    font-weight: 400;
    color: #6b7280;
    left: 0;
  }

  & ul > li::before {
    content: "";
    position: absolute;
    background-color: #d1d5db;
    border-radius: 50%;
    width: 0.375em;
    height: 0.375em;
    top: 0.6875em;
    left: 0.25em;
  }

  & blockquote {
    font-weight: 500;
    font-style: italic;
    color: inherit;
    border-left-width: 0.25rem;
    border-color: #7d7d7d4d;
    quotes: """ """ "'" "'";
    margin: 1.6em auto 1.6em 0;
    padding: 0.5em 1em 0.5em 1em;

    & > * {
      opacity: 0.7;
    }

    & > :first-child {
      margin-top: 0;
    }

    & > :last-child {
      margin-bottom: 0;
    }

    & p:first-of-type::before {
      content: open-quote;
    }

    & p:last-of-type::after {
      content: close-quote;
    }
  }

  & h1, & h2, & h3, & h4, & h5, & h6 {
    &:hover .header-anchor,
    &:focus .header-anchor {
      opacity: 0.5;
    }
  }

  & h1 {
    color: var(--fg-deeper);
    font-weight: 800;
    font-size: 2.25em;
    margin-top: 0;
    margin-bottom: 0.8888889em;
    line-height: 1.1111111;
  }

  & h2 {
    color: var(--fg-deep);
    font-weight: 700;
    font-size: 1.6em;
    margin-top: 2em;
    margin-bottom: 1em;
    line-height: 1.3333333;
  }

  & h3 {
    color: inherit;
    font-weight: 600;
    font-size: 1.25em;
    margin-top: 1.4em;
    margin-bottom: 0.6em;
    line-height: 1.6;
  }

  & h4 {
    color: inherit;
    font-weight: 600;
    font-size: 1.15em;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    line-height: 1.5;
  }

  & h5 {
    color: inherit;
    font-weight: 600;
    font-size: 1.15em;
    margin-top: 1.5em;
    opacity: .7;
    margin-bottom: 0.5em;
    line-height: 1.5;
  }

  & h6 {
    text-transform: uppercase;
    margin-top: 20px;
    margin-bottom: 10px;
    font-weight: 500;
    letter-spacing: 2px;
  }

  & figure figcaption {
    color: #6b7280;
    font-size: 0.875em;
    line-height: 1.4285714;
    margin-top: 0.8571429em;
  }

  & code {
    color: var(--fg-deep);
    font-weight: 600;
  }

  & p code {
    font-weight: bold;
    margin: 0 0.5em;

    &::before, &::after {
      content: "`";
    }
  }

  & pre code::before, & pre code::after {
    content: none;
  }

  & table {
    width: 100%;
    table-layout: auto;
    text-align: left;
    margin: 2em 0;
    font-size: 0.875em;
    line-height: 1.7142857;
  }

  & thead {
    color: var(--fg-deep);
    font-weight: 600;
    border-bottom: 1px solid #d1d5db;

    & th {
      vertical-align: bottom;
      padding: 0.5714286em;
    }
  }

  & tbody {
    & tr {
      border-bottom: 1px solid #e5e7eb;

      &:last-child {
        border-bottom-width: 0;
      }
    }

    & td {
      vertical-align: top;
      padding: 0.5714286em;
    }
  }

  & p {
    margin: 1.25em 0;
  }

  & img, & video, & figure {
    margin: 2em 0;
  }

  & figure > * {
    margin: 0;
  }

  & h2 code {
    font-size: 0.875em;
  }

  & h3 code {
    font-size: 0.9em;
  }

  & > ul > li p {
    margin: 0.75em 0;
  }

  & > ol > li > *:first-child {
    margin-top: 1.25em;
  }

  & > ol > li > *:last-child {
    margin-bottom: 1.25em;
  }

  & ul ul, & ul ol, & ol ul, & ol ol {
    margin: 0.75em 0;
  }

  & hr + *, & h2 + *, & h3 + *, & h4 + * {
    margin-top: 0;
  }

  & > :first-child {
    margin-top: 0;
  }

  & > :last-child {
    margin-bottom: 0;
  }

  & em {
    color: inherit;
  }

  & .shiki {
    font-family: DM Mono, Input Mono, Fira Code, monospace;
    font-size: 0.92em;
    line-height: 1.4;
    margin: 0.5em 0;
  }

  & img {
    width: 100%;
    height: auto;
  }

  & p > img {
    width: auto;
    display: block;
    max-width: 100%;
    border-radius: 0.5rem;
    --un-shadow: var(--un-shadow-inset) 0 1px 3px 0 var(--un-shadow-color, rgb(0 0 0 / 0.1)),
      var(--un-shadow-inset) 0 1px 2px -1px var(--un-shadow-color, rgb(0 0 0 / 0.1));
    box-shadow: var(--un-ring-offset-shadow), var(--un-ring-shadow),
      var(--un-shadow);
    margin: 2.6em auto;
  }
}

.prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
  &.show-heading::after {
    margin-left: .4em;
    font-size: x-small;
    position: absolute;
    opacity: .4;
    font-weight: lighter;
  }
}

.prose h1.show-heading::after { content: "H1"; }
.prose h2.show-heading::after { content: "H2"; }
.prose h3.show-heading::after { content: "H3"; }
.prose h4.show-heading::after { content: "H4"; }
.prose h5.show-heading::after { content: "H5"; }
.prose h6.show-heading::after { content: "H6"; }

a.item {
  transition: 0.2s all ease-out;
  text-decoration: none;
  border-bottom: none !important;
  opacity: 0.6;

  &:hover {
    opacity: 1;
  }
}

html.dark .prose {
  --fg: #bbb;
  --fg-deep: #ddd;
  --fg-deeper: #fff;
}